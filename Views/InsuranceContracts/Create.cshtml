@model ZaverecnyProjektForman2.Models.InsuranceContracts

@{
    ViewData["Title"] = "Vytvoření pojistné smlouvy";
}

<h1>Vytvoření pojistné smlouvy</h1>


<div class="row mt-2">
    <div class="container">
        <form class="row" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-12 d-flex flex-column flex-sm-row">
                    <div class="col-6 form-group m-2">
                        <label asp-for="InsuredId" class="control-label">Pojistník</label>
                        <select asp-for="InsuredId" class="form-control" asp-items="ViewBag.InsuredId"></select>
                        <small class="form-text text-muted">Jméno a příjmení pojistníka.</small>
                    </div>
                </div>
                <div class="col-12 d-flex flex-column flex-sm-row">
                    <div class="col-6 form-group m-2">
                        <label asp-for="InsuranceId" class="control-label">Typ pojištění</label>
                        <select asp-for="InsuranceId" class="form-control" asp-items="ViewBag.InsuranceId"></select>
                        <small class="form-text text-muted">Typ zvoleného pojištění.</small>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex flex-column flex-sm-row">
                    <div class="col-6 form-group m-2">
                        <label asp-for="NameSubject" class="control-label">Předmět pojištění</label>
                        <input asp-for="NameSubject" class="form-control" />
                        <span asp-validation-for="NameSubject" class="text-danger"></span>
                        <small class="form-text text-muted">Předmět sjednání pojištění.</small>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex flex-column flex-sm-row">
                    <div class="col-2 form-group m-1">
                        <label asp-for="Amount" class="control-label">Částka pojištění</label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                        <small class="form-text text-muted">Pojistná částka.</small>
                    </div>
                    <div class="col-2 form-group m-1">
                        <label asp-for="InsuredFrom" class="control-label">Pojištěno od</label>
                        <input asp-for="InsuredFrom" class="form-control" />
                        <span asp-validation-for="InsuredFrom" class="text-danger"></span>
                        <small class="form-text text-muted">Platnost pojištění od.</small>
                    </div>
                    <div class="col-2 form-group m-1">
                        <label asp-for="InsuredUntil" class="control-label">Pojištěno do</label>
                        <input asp-for="InsuredUntil" class="form-control" />
                        <span asp-validation-for="InsuredUntil" class="text-danger"></span>
                        <small class="form-text text-muted">Platnost pojištění do.</small>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex flex-column flex-sm-row">
                    <div class="form-group mt-5">
                        <input type="submit" value="Uložit" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <a asp-action="Index">Back to List</a>
</div>

