@model ZaverecnyProjektForman2.Models.InsuranceContracts

@{
    ViewData["Title"] = "Upravit pojisnou smlouvu";
}

<h1>Upravit pojisnou smlouvu</h1>
<hr />
<div class="row mt-2">
    <div class="container">
        <form class="row" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="InsuredId" />
            <input type="hidden" asp-for="InsuranceId" />
            <input type="hidden" asp-for="NameSubject" />
            <div class="row">
                <div class="col-12 d-flex flex-column flex-sm-row">
                    <div class="col-6 form-group p-2">
                        <label asp-for="InsuredId" class="control-label">Jméno pojistníka</label>
                        <select asp-for="InsuredId" class="form-control" asp-items="ViewBag.InsuredId" disabled title="Jméno pojistníka je pevně nastaveno a nelze jej změnit."></select>
                        <span asp-validation-for="InsuredId" class="text-danger"></span>
                        <small class="form-text text-muted small-text">Jméno a říjmení pojistníka.</small>
                    </div>
                    <div class="col-6 form-group p-2">
                        <label asp-for="InsuranceId" class="control-label">Typ pojištění</label>
                        <select asp-for="InsuranceId" class="form-control" asp-items="ViewBag.InsuranceId" disabled title="Typ pojištění je pevně nastaven a nelze jej změnit."></select>
                        <span asp-validation-for="InsuranceId" class="text-danger"></span>
                        <small class="form-text text-muted small-text">Typ pojištění.</small>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex flex-column flex-sm-row">
                    <div class="col-6 form-group p-2">
                        <label asp-for="NameSubject" class="control-label">Předmět pojištění</label>
                        <input asp-for="NameSubject" class="form-control" disabled title="Předmět pojištění je pevně nastaven a nelze jej změnit." />
                        <span asp-validation-for="NameSubject" class="text-danger"></span>
                        <small class="form-text text-muted small-text">Předmět pojištění.</small>
                    </div>
                    <div class="col-6 form-group p-2">
                        <label asp-for="Amount" class="control-label">Částka pojištění</label>
                        <input asp-for="Amount" class="form-control" title="Zadejte částku pojištění." />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                        <small class="form-text text-muted small-text">Částka pojištění.</small>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex flex-column flex-sm-row">
                    <div class="col-3 form-group p-2">
                        <label asp-for="InsuredFrom" class="control-label">Pojištěno od</label>
                        <input asp-for="InsuredFrom" class="form-control" title="Zadejte datum začátku pojištění." />
                        <span asp-validation-for="InsuredFrom" class="text-danger"></span>
                        <small class="form-text text-muted small-text">Datum, od kdy je pojištění platné.</small>
                    </div>
                    <div class="col-3 form-group p-2">
                        <label asp-for="InsuredUntil" class="control-label">Pojištěno do</label>
                        <input asp-for="InsuredUntil" class="form-control" title="Zadejte datum konce pojištění." />
                        <span asp-validation-for="InsuredUntil" class="text-danger"></span>
                        <small class="form-text text-muted small-text">Datum, do kdy je pojištění platné.</small>
                    </div>
                    <div class="col-6 form-group mt-5 mb-4 d-flex justify-content-center">
                        <input type="submit" value="Uložit" class="btn btn-primary" title="Uložte změny v pojištění." />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="mt-5">
    <button class="btn btn-outline-secondary btn-zpet" onclick="history.back()" title="Vraťte se zpět na seznam pojištění.">
        Zpět
    </button>
</div>

