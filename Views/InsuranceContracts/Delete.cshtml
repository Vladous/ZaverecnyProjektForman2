@model ZaverecnyProjektForman2.Models.InsuranceContracts

@{
    ViewData["Title"] = "Vymazat smlouvu";
}

<h1>Vymazat</h1>

<h3>Opravdu chcete odstranit pojistnou smlouvu ?</h3>
<div class="container">
    <hr />
    <!-- Detaily pojistné smlouvy pro potvrzení odstranění -->
    <dl class="row">
        <!-- Jméno a příjmení pojistníka -->
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-3 form-group p-2">
                @Html.DisplayNameFor(model => model.Insured.Name) a @Html.DisplayNameFor(model => model.Insured.Surname)
            </dt>
            <dd class="col-3 form-group p-2">
                @Html.DisplayFor(model => model.Insured.Name) @Html.DisplayFor(model => model.Insured.Surname)
            </dd>
            <!-- Typ pojištění -->
        </div>
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-3 form-group p-2">
                @Html.DisplayNameFor(model => model.Insurance.Type)
            </dt>
            <dd class="col-3 form-group p-2">
                @Html.DisplayFor(model => model.Insurance.Type)
            </dd>
        </div>
        <!-- Předmět pojištění -->
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-3 form-group p-2">
                @Html.DisplayNameFor(model => model.NameSubject)
            </dt>
            <dd class="col-3 form-group p-2">
                @Html.DisplayFor(model => model.NameSubject)
            </dd>
        </div>
        <!-- Částka pojištění -->
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-3 form-group p-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-3 form-group p-2">
                @Html.DisplayFor(model => model.Amount)
            </dd>
        </div>
        <!-- Pojištěno od -->
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-3 form-group p-2">
                @Html.DisplayNameFor(model => model.InsuredFrom)
            </dt>
            <dd class="col-3 form-group p-2">
                @Html.DisplayFor(model => model.InsuredFrom)
            </dd>
        </div>
        <!-- Pojištěno do -->
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-3 form-group p-2">
                @Html.DisplayNameFor(model => model.InsuredUntil)
            </dt>
            <dd class="col-3 form-group p-2">
                @Html.DisplayFor(model => model.InsuredUntil)
            </dd>
        </div>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Vymazat" class="btn btn-danger" title="Kliknutím potvrdíte odstranění smlouvy."
               onclick="return confirm('Opravdu chcete odstranit tuto smlouvu?');" />
    </form>
</div>
<div class="mt-5">
    <button class="btn btn-outline-secondary btn-zpet" onclick="history.back()" title="Vrátit se zpět na předchozí stránku">
        Zpět
    </button>
</div>
