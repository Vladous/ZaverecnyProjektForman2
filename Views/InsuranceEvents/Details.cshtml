@model ZaverecnyProjektForman2.Models.InsuranceEvents

@{
    ViewData["Title"] = "Detail události";
}

<h1>@Html.DisplayFor(model => model.Insurance.Type) - @Html.DisplayFor(model => model.EventDetail)</h1>

<div class="container">
    <hr />
    <dl class="row">
        <!-- Jméno a příjmení pojistníka -->
        <div class="col-md-3">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Insured)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Insured.Name) @Html.DisplayFor(model => model.Insured.Surname)
            </dd>
        </div>
        <!-- Typ pojištění -->
        <div class="col-md-3">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Insurance.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Insurance.Type)
            </dd>
        </div>
        <!-- Detail události -->
        <div class="col-md-3">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.EventDetail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventDetail)
            </dd>
        </div>
        <!-- Částka pojištění -->
        <div class="col-md-3">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.FulfillmentAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FulfillmentAmount)
            </dd>
        </div>
        <!-- Datum události -->
        <div class="col-md-3">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.FulfillmentDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FulfillmentDate)
            </dd>
        </div>
        <!-- Datum vytvoření -->
        <div class="col-md-3">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
        </div>
        <!-- Datum poslední změny -->
        <div class="col-md-3">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.LastChange)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastChange)
            </dd>
        </div>
    </dl>
</div>

<!-- Obsah jen pro managery a výš -->
<!-- Tlačítka pro úpravy -->
@if (User.IsInRoleOrHigher(UserRoles.Manager))
{
    <div class="d-flex justify-content-center pt-5">
        <form asp-action="Edit" asp-route-id="@Model?.Id" method="get" class="me-2">
            <button type="submit" class="btn btn-warning btn-novy-pojistenec" title="Uprvit aktuální událost.">Upravit událost</button>
        </form>
        <form asp-action="Delete" asp-route-id="@Model?.Id" method="get">
            <button type="submit" class="btn btn-danger btn-novy-pojistenec" onclick="return confirm('Opravdu chcete smazat tuto událost?');" title="Smazat aktuální událost.">Smazat událost</button>
        </form>
    </div>
}
<div class="mt-5">
    <button class="btn btn-outline-secondary btn-zpet" onclick="history.back()" title="Zpět na předchozí stránku.">
        Zpět
    </button>
</div>