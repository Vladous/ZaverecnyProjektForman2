@model IEnumerable<ZaverecnyProjektForman2.Models.Insurance>

@{
    ViewData["Title"] = "Typy pojistných smluv";
}

<h1>Typy pojistných smluv</h1>

<p>
<div class="d-flex justify-content-center">
    <form asp-action="Create" method="get">
        <button type="submit" class="btn btn-primary">Vytvořit nový typ</button>
    </form>
</div>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Type
            </th>
            <th>
                Datum vytvoření
            </th>
            <th>
                Poslední změna
            </th>
            <th>
                Úpravy
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastChange)
            </td>
                <td class="min-width-td d-flex justify-content-around">
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <img src="~/images/edit.png" alt="Edit" class="img-fluid align-middle" style="max-height: 30px;">
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <img src="~/images/detail.png" alt="Details" class="img-fluid align-middle" style="max-height: 30px;">
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <img src="~/images/delete.png" alt="Delete" class="img-fluid align-middle" style="max-height: 30px;">
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
