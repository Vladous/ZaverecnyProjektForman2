@model ZaverecnyProjektForman2.Models.Insurance

@{
    ViewData["Title"] = "Odstranit";
}

<h1>Odstranit</h1>

<h3>Opravdu chcete odstranit tento typpojištění ?</h3>
<div class="container">
    <hr />
    <dl class="row">
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-4 form-group p-2">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-4 form-group p-2">
                @Html.DisplayFor(model => model.Type)
            </dd>
        </div>
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-4 form-group p-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-4 form-group p-2">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
        </div>
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-4 form-group p-2">

                @Html.DisplayNameFor(model => model.LastChange)
            </dt>
            <dd class="col-4 form-group p-2">
                @Html.DisplayFor(model => model.LastChange)
            </dd>
        </div>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Vymazat" class="btn btn-danger"
               onclick="return confirm('Opravdu chcete odstranit tento typ pojištění?');" />
    </form>
</div>
<div class="mt-5">
    <button class="btn btn-outline-secondary btn-zpet" onclick="history.back()">
        Zpět
    </button>
</div>