@model ZaverecnyProjektForman2.Models.Insurance

@{
    ViewData["Title"] = "Detail";
}

<h1>@Html.DisplayFor(model => model.Type)</h1>
<div class="container">
    <hr />
    <dl class="row">
        <div class="col-md-3">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Type)
            </dd>
        </div>
        <div class="col-md-3">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
        </div>
        <div class="col-md-3">
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.LastChange)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastChange)
            </dd>
        </div>
    </dl>
</div>
<!-- Obsah jen pro administrátory -->
@if (User.IsInRoleOrHigher(UserRoles.Admin))
{
    <div class="d-flex justify-content-center pt-5">
        <form asp-action="Edit" asp-route-id="@Model?.Id" method="get" class="me-2">
            <button type="submit" class="btn btn-warning btn-novy-pojistenec" title="Upravit typ pojištění">Upravit typ</button>
        </form>
        <form asp-action="Delete" asp-route-id="@Model?.Id" method="get">
            <button type="submit" class="btn btn-danger btn-novy-pojistenec" title="Smazat typ pojištění">Smazat typ</button>
        </form>
    </div>
}
<div class="mt-5">
    <button class="btn btn-outline-secondary btn-zpet" onclick="history.back()" title="Vrátit zpět na předchozí stránku">
        Zpět
    </button>
</div>
