@model ZaverecnyProjektForman2.Models.Insurance

@{
    ViewData["Title"] = "Upravit pojištění";
}

<h1>Úprava typu pojištění</h1>
<hr />
<div class="row mt-2">
    <div class="container">
        <form class="row" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-12 d-flex flex-column flex-sm-row">
                    <div class="col-6 form-group p-2">
                        <label asp-for="Type" class="control-label"></label>
                        <input asp-for="Type" class="form-control" placeholder="Zadejte typ pojištění..." title="Zadejte typ pojištění..." />
                        <span asp-validation-for="Type" class="text-danger"></span>
                        <small class="form-text text-muted small-text">Typ pojištění</small>
                    </div>
                    <div class="col-6 form-group mt-5 mb-5 d-flex justify-content-center">
                        <input type="submit" value="Uložit" class="btn btn-primary" title="Uložit typ pojištění." />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <button class="btn btn-outline-secondary btn-zpet" onclick="history.back()" title="Zpět na předchozí stránku bez uložení.">
        Zpět
    </button>
</div>

