@model ZaverecnyProjektForman2.Models.Insured

@{
    ViewData["Title"] = "Vymazat";
}

<h1>Vymazat</h1>

<h3>Opravdu chcete odstranit pojištěnce?</h3>
<div class="container">
    <hr />
    <dl class="row">
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-2 form-group p-2">
                Jméno
            </dt>
            <dd class="col-2 form-group p-2">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </div>
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-2 form-group p-2">
                Příjmení
            </dt>
            <dd class="col-2 form-group p-2">
                @Html.DisplayFor(model => model.Surname)
            </dd>
        </div>
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-2 form-group p-2">
                Datum narození
            </dt>
            <dd class="col-2 form-group p-2">
                @Html.DisplayFor(model => model.Birth)
            </dd>
        </div>
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-2 form-group p-2">
                E-mail
            </dt>
            <dd class="col-2 form-group p-2">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </div>
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-2 form-group p-2">
                Ulice
            </dt>
            <dd class="col-2 form-group p-2">
                @Html.DisplayFor(model => model.Street) @Html.DisplayFor(model => model.HouseNumber)
            </dd>
        </div>
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-2 form-group p-2">
                Město
            </dt>
            <dd class="col-2 form-group p-2">
                @Html.DisplayFor(model => model.City)
            </dd>
        </div>
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-2 form-group p-2">
                PSČ
            </dt>
            <dd class="col-2 form-group p-2">
                @Html.DisplayFor(model => model.PostNumber)
            </dd>
        </div>
        <div class="col-12 d-flex flex-column flex-sm-row">
            <dt class="col-2 form-group p-2">
                Telefon
            </dt>
            <dd class="col-2 form-group p-2">
                @Html.DisplayFor(model => model.Phone)
            </dd>
        </div>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Vymazat" class="btn btn-danger" />
    </form>
</div>
<div class="pt-5">
    <a asp-action="Index">Zpět</a>
</div>
