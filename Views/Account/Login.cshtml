@model LoginViewModel

@{
    ViewData["Title"] = "Přihlášení";
}

<div class="row">
    <div class="col-4">
        <form class="d-flex flex-column gap-2" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="All" class="text-danger"></div>
            <!-- Pole pro uživatelské jméno -->
            <div class="form-group">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" placeholder="Zadejte uživatelské jméno..." title="Zadejte své uživatelské jméno." />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <small class="form-text text-muted small-text">Zadejte uživatelské jméno.</small>
            </div>
            <!-- Pole pro heslo -->
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Zadejte heslo..." title="Zadejte své heslo." />
                <span asp-validation-for="Password" class="text-danger"></span>
                <small class="form-text text-muted small-text">Zadejte heslo.</small>
            </div>
            <!-- Checkbox pro zapamatování přihlášení -->
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" title="Zůstat přihlášen na tomto zařízení.">
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <!-- Tlačítko pro přihlášení -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary clanky-tlacitko" title="Přihlásit se do systému.">Přihlásit se</button>
            </div>

            @* <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Registrace</a> *@
        </form>
    </div>
</div>
<div class="mt-5">
    <button class="btn btn-outline-secondary btn-zpet" onclick="history.back()" title="Vrátit se zpět na předchozí stránku.">
        Zpět
    </button>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}